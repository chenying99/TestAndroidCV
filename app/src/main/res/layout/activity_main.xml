<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="框架性能测试"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/tflite_btn"
        android:text="使用 TFLite 图像分类"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/mnn_btn"
        android:text="使用 MNN 图像分类"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/paddle_btn"
        android:text="使用 Paddle 图像分类"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_margin="5dp"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="2dp"/>

    <Button
        android:id="@+id/tflite_btn2"
        android:text="使用 TFLite 目标检测"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/mnn_btn2"
        android:text="使用 MNN 目标检测"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/paddle_btn2"
        android:text="使用 Paddle 目标检测"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>